<body>
  
  <form>
    <h2>parent doubt</h2>
    <label for="student">parent name</label>
    <br>
    <input type="text" id="feedName" name="parentName" placeholder="your name">
    <br>             
    <label for="parentnumber">mobile no </label>
    <br>
    <input type="tel" style="width: 175px; margin-top: 4px;" placeholder="enter mobile no" id="parentnumber" name="parentNumber" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required>
    <br>
    
    <textarea name="feedback" id="feed" cols="50" rows="10" placeholder="Text feedback "></textarea>
    <br>
    <button type="button" onclick="fb()">submit</button>
    <button type="reset" onclick="clearf()">reset</button>
    <div id="message"></div>
  </form>      
  
<script>

  function clearf()
  {
    document.getElementById('message').innerHTML='';
  }

  function fb(){
    var Pname=document.getElementById('feedName').value;
  var f=document.getElementById('feed').value;
  var pNumber=document.getElementById('parentnumber').value;   
  var a={  
    name:Pname,
    pnumber:pNumber,
    feedtext: f        
  }   
  fetch('/parentZone', {
        method: 'POST',
        headers: {
      "Content-Type": "application/json",
    },    
        body: JSON.stringify(a)     
      })        
        .then(response => response.json())
        .then(data => {
          document.getElementById('message').innerHTML = data.msg;
        })    
        .catch(error => {
          console.error('Error:', error);
        });
  }


</script>
  


</body>
</html>