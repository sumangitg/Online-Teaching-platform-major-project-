<!DOCTYPE html>
<html lang="en">
<head>  
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>account page</title>
  <link rel="stylesheet" href="/css/MyAccount.css">  

  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">
</head>     
<body>      
  <div id="profileHeadDiv">
    <div id="inheadDiv-1" class="inheadDiv"><img src="\images\websitelogo2copy.jpg" alt="logo"></div>  
    <div id="inheadDiv-2" class="inheadDiv"><input type="search" placeholder="search here "><div><img src="\images\icons8-search-50.png" alt=""></div></div>
    <div id="userid"><%=users%></div> 
    <div id="outerInheadDiv-3"> 
    
      <button id="inheadDiv-3" class="inheadDiv" onclick="toggleProfile()"><img src="\images\kindpng_4952535.png" alt="profile"></button>   
      <br>
  <div id="profileBox"> </div>
      </div>
  </div>   
  <hr style="margin: 0px;">

  <div id="backHome">   
    <a href="/myProfile/<%=users%>">HOME </a> / ACCOUNT  
  </div>

  <h2 id="accountHeading">ACCOUNT</h2>
  <div id="accountdiv">
    <div id="account-1">   
     <a href="#"> 
      <div id="myprofilelink" class="inAccount-1">    
        <div class="imgicon">
          <img src="\images\user (1).png" alt="">
        </div>
        <div class="myprofile">
          My Profile   
        </div>
      </div>   
    </a>

    <a href="/MyEnrollments/<%= userinfo[0].stuId%>" >
       <div class="inAccount-1" id="myEnrollLink">       
          <div class="imgicon" >
            <img src="\images\exam.png" alt="">
          </div>  
          <div class="myprofile">
            My Enrollments     
          </div> 
      </div>   
    </a>   
    </div>

    <div id="account-2">
      <p class="accountDetail">Student Id : <%=userinfo[0].stuId%></p>   
      <hr>
      <p class="accountDetail">Account name : <%=userinfo[0].stuName%></p>
      <hr>
      <p class="accountDetail">Email : <%=userinfo[0].email%></p>    
      <hr> 
      
    </div>

  </div>
<hr>
  <div id="footer">
    <div id="footer-1" class="footeritem">SD</div>
    <div id="footer-2" class="footeritem">About us</div>
  
    
    <div id="footer-3" class="footeritem"><img src="\images\icons8-twitter-squared-48.png" alt=""></div>   
    <div id="footer-4" class="footeritem"><img src="\images\youtube.256x256.png" alt=""></div>
    
  </div>


  <script>    
  let userid=document.getElementById('userid').innerText;  
    let hiDivVisible = false;
    function toggleProfile() {
      const hiDiv = document.getElementById('profileBox');
      
      if (hiDivVisible) {
        hiDiv.style.display = 'none'; // Hide the div
        hiDivVisible = false;
      } else {    
        hiDiv.innerHTML = `  <a class="profileOption" id="profileLink" href="/myProfile/${userid}">My Profile</a>
  <br>          
        <a class="profileOption" href="/MyAccount/${userid}">My Account</a>  
  <br>    
  <a class="profileOption" href="/MyEnrollments/${userid}">My Enrollments</a>
  <br>      
  <a class="profileOption" href="/logout">Sign Out</a> `;  

        hiDiv.style.display = 'flex'; // Show the div
        hiDiv.style.flexDirection='column';
        hiDivVisible = true;
      }
    }  
    
  </script>  

</body>
</html>